import React, {useState, useRef, useEffect} from "react";
import JsonGUI from "./components/JSONGUI";

const App = () => {
    const [children, setChildren] = useState([]);
    const [grandChildren, setGrandChildren] = useState([]);
    const [json, setJson] = useState({})
    const nextType = useRef("");
    const nextLabel = useRef("");

    const handleGrandChildren = (children) => {
        setGrandChildren(children)
    }

    const handleDelete = (index) => {
        console.log(index);
        setChildren(children.filter((_,i)=> i !== index));
    }
    
    const generateJson = (b, i) => {
        json[i] = b;
        setJson({...json});
    }

    useEffect(()=>{
        console.log(json);
    },[json])

    const handleClick = () => {
        setChildren([...children, <JsonGUI index={children.length} key={children.index} jsonDrill={generateJson} deleteFunction={handleDelete} gcf={handleGrandChildren} type={nextType.current.value} label={nextLabel.current.value || ""} root={false}></JsonGUI>])
    }

    return (
        <div>
            Root
            <JsonGUI index={children.length} level={0} type="text" root={true} />
            {children}
            <div className="json-gui-container--add">
                <div onClick={handleClick} className="json-gui-container--btn plus"></div>
                Add a <select ref={nextType}>
                    <option value="text">String</option>
                    <option value="number">Number</option>
                    <option value="checkbox">Boolean</option>
                    <option value="array">Array</option>
                    <option value="object">Object</option>
                    <option value="file">File</option>
                </select> labeled <input type="text" ref={nextLabel} />
            </div>
        </div>
    );
}
export default App;

